<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/soft_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:minHeight="50dp"></RelativeLayout>

    <LinearLayout
        android:id="@+id/utils_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/soft_panel"
        android:orientation="vertical"
        android:background="#0ff"
        android:minHeight="50dp">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/show_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/utils_panel"
        android:orientation="vertical"
        android:background="#000"
        android:minHeight="50dp">
    </RelativeLayout>

    <View
        android:id="@+id/layout_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/show_panel"
        android:background="f00"
        />





</RelativeLayout>